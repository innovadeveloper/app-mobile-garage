<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/llPhotoProfile"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="32dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivPhotoProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_profile_128" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="@+id/llPhotoProfile"
        app:layout_constraintStart_toStartOf="@+id/llPhotoProfile"
        app:layout_constraintTop_toBottomOf="@+id/llPhotoProfile"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvFullName"
            app:fontFamily="@font/seguisb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/seguisb"
            android:text="FULL NAME"
            android:textSize="24sp"
            android:textColor="@color/primary_color" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_marginTop="5dp"
            android:id="@+id/tvUsername"
            app:fontFamily="@font/seguisb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/seguisb"
            android:text="\@"
            android:textColor="@color/secondary_color" />


        <com.google.android.material.textview.MaterialTextView
            android:layout_marginTop="5dp"
            android:id="@+id/tvCreateAt"
            app:fontFamily="@font/seguisb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/seguisb"
            android:text="Creado en ..."
            android:textColor="@color/secondary_color" />
        <com.google.android.material.textview.MaterialTextView
            android:layout_marginTop="5dp"
            android:id="@+id/tvState"
            app:fontFamily="@font/seguisb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/seguisb"
            android:text="ACTIVE"
            android:textColor="@color/secondary_color" />
        <com.google.android.material.textview.MaterialTextView
            android:layout_marginTop="5dp"
            android:id="@+id/tvRoleName"
            app:fontFamily="@font/seguisb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/seguisb"
            android:text="ROL : ..."
            android:textColor="@color/secondary_color" />

    </LinearLayout>

