<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/llToGoGarageMap"
        android:orientation="vertical"
        app:layout_constraintEnd_toStartOf="@+id/gv1"
        app:layout_constraintStart_toStartOf="@+id/gv2"
        app:layout_constraintTop_toTopOf="@id/gh1"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvToGoGarageMap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="10dp">

            <ImageView
                android:id="@+id/ivToGoGarageMap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/background_map_big" />

        </androidx.cardview.widget.CardView>
        <com.google.android.material.textview.MaterialTextView
            android:theme="@style/Theme.GarageAppMovil"
            android:id="@+id/tvToGoGarageMap"
            android:textColor="@color/primary_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_gravity="right"
            android:text="Â¿Como llegar?" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:id="@+id/llToViewGarage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="@+id/llToGoGarageMap"
        app:layout_constraintStart_toStartOf="@+id/llToGoGarageMap"
        app:layout_constraintTop_toBottomOf="@+id/llToGoGarageMap">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvToViewGarage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="10dp">

            <ImageView
                android:id="@+id/ivToViewGarage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/background_garage_medium" />

        </androidx.cardview.widget.CardView>

        <com.google.android.material.textview.MaterialTextView
            android:textColor="@color/primary_color"
            android:id="@+id/tvToViewGarage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="8dp"
            android:text="Ver Garage"
            android:theme="@style/Theme.GarageAppMovil" />
    </LinearLayout>

    <!--LINEAS GUIAS -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gv1"
        app:layout_constraintGuide_percent="0.9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gv2"
        app:layout_constraintGuide_percent="0.1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gh1"
        app:layout_constraintGuide_percent="0.05"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gh2"
        app:layout_constraintGuide_percent="0.9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" />



</androidx.constraintlayout.widget.ConstraintLayout>